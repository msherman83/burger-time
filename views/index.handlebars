<div class="container">
  <div class="row text-center">
    <div class="col-lg-6">
      {{#each burgers}} {{#unless devoured}}
        <form action="/burgers/{{id}}?_method=PUT" method="POST">
          {{burger_name}}
          <button type="submit" class="devour-burger-btn btn btn-warning">Devour!</button>
        </form>
        {{/unless}} {{/each}}
    </div>

    <div class="col-lg-6">
      {{#each burgers}} {{#if devoured}}
      <div>
        <div>
          {{burger_name}}
        </div>
      </div>
      {{/if}} {{/each}}
    </div>
  </div>
</div>


<h2 class="text-center">Add Your Burger</h2>

<div class="row text-center">
  <div class="col-lg-12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Add your burger here!">
      <button type="submit" class="btn btn-warning">Add-A-Burger!</button>
    </form>
  </div>
</div>