<h1>Eat-Da-Burger!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each burgers}}
          {{#unless devoured}}
            <div>
              <form action="/burgers/{{id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burgers}}
          {{#if devoured}}
            <div class='burgerEaten'>
              <div>
                {{burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Add Your Burger</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Add your burger here!">
      <button type="submit" class="addBurgerButton">Add-A-Burger!</button>
    </form>
  </div>
</div>

